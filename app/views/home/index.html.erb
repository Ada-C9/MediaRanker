<section class="spotlight">

  <h3>
    <%= "Media Spotlight:" %>
    <%= link_to @spotlight.title, work_path(@spotlight.id) %>
    <%= "by #{@spotlight.creator}" %>
  </h3

  <p>
    <%= "#{@spotlight.votes.length} votes - #{@spotlight.description}" %>
  </p>

</section>



<% top_by_cat = [@top_m, @top_b, @top_a] %>

<% top_by_cat.each do |cat| %>

  <section class="top-ten">

  <h3>
    <%= "Top #{cat[0].category}s" %>
  </h3>

  <ul>

    <% cat.each do |w| %>
    <li>
      <h4>
        <%= w.title %>
        <small><%= "by #{w.creator}" %></small>
      </h4>
      <p><%= "#{w.votes.length} votes" %></p>
    </li>
    <% end %>

  </ul>

  </section>

<% end %>
