<% most_votes = @works.sort.reverse.first %>

<main>
  <section class="row-spotlight">
    <h3>Media Spotlight: <%= link_to most_votes.title, work_path(most_votes.id) %>
      <% if most_votes.creator %>
      by <%= most_votes.creator %><br />
      <% end %>
      <sub><%= most_votes.votes.count %> votes
        <% if most_votes.description %>
        - <%= most_votes.description %>
      </sub>
      <% end %>
    </h3>
  </section>
  <section class="top-ten-container">
    <section class="top-ten">
      <h3>Top Albums</h3>
      <% Work.category_list(@works, "album").each do |i| %>
      <%= link_to i.title, work_path(i.id) %>
      <% if i.creator %>
      by <%= i.creator %>
      <% end %><br />
      <%= i.votes.count %> votes<br />
      <% end %>
    </section>
    <section class="top-ten">
      <h3>Top Books</h3>
      <% Work.category_list(@works, "book").each do |i| %>
      <%= link_to i.title, work_path(i.id) %>
      <% if i.creator %>
      by <%= i.creator %>
      <% end %><br />
      <%= i.votes.count %> votes<br />
      <% end %>
    </section>
    <section class="top-ten">
      <h3>Top Movies</h3>
      <% Work.category_list(@works, "movie").each do |i| %>
      <%= link_to i.title, work_path(i.id) %>
      <% if i.creator %>
      by <%= i.creator %>
      <% end %><br />
      <%= i.votes.count %> votes<br />
      <% end %>
    </section>
  </section>

</main>
