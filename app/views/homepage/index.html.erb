<section class="top-ten-container">
  <section class="top-ten">
    <h3>Top Movies</h3>
    <% @movies.each do |movie| %>
      <ul>
        <li>
          <h4><%= link_to movie.title, work_path(movie.id) %></h4>
          <small><%= movie.creator %></small>
          <p><%= movie.num_votes %></p>
        </li>
      </ul>
    <% end%>
  </section>

  <section class="top-ten">
    <h3>Top Books</h3>
    <% @books.each do |book| %>
      <ul>
        <li>
          <h4><%= link_to book.title, work_path(book.id) %></h4>
          <small><%= book.creator %></small>
          <p><%= book.num_votes %></p>
        </li>
      </ul>
    <% end%>
  </section>

  <section class="top-ten">
    <h3>Top Albums</h3>
    <% @albums.each do |album| %>
      <ul>
        <li>
          <h4><%= link_to album.title, work_path(album.id) %></h4>
          <small><%= album.creator %></small>
          <p><%= album.num_votes %></p>
        </li>
      </ul>
    <% end%>
  </section>
</section>
