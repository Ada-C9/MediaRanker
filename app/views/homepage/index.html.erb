<section class="spotlight">
  <% spotlight_publication = Publication.find_spotlight_publication%>
  <% if spotlight_publication%>
    <h3>Media Spotlight:
      <%= link_to spotlight_publication.title, publication_path(spotlight_publication.id)%>
      by <%= spotlight_publication.creator %>
    </h3>
    <p>
       <%= spotlight_publication.find_total_votes%> votes - <%= spotlight_publication.description %>
    </p>
    <% else%>
      <h3>There are no votes yet</h3>
    <% end %>
</section>

<section class="top-ten-container">
  <% categories = Publication.return_all_categories%>
  <% categories.each do | category | %>
    <section class="top-ten">
      <h3>Top <%= category.capitalize %></h3>
      <ul>
        <% top_ten = Publication.find_top_ten_by(category) %>
        <% top_ten.each do |publication| %>
          <li>
            <h4>
              <%= link_to publication.title, publication_path(publication.id) %>
              <span>by <%= publication.creator%></span>
            </h4>
            <p><%= publication.find_total_votes %> votes</p>
          </li>
        <% end %>
      </ul>
    </section>
    <% end %>
</section>
