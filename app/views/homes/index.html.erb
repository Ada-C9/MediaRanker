<h2>Home Page</h2>

<% top_work = @works.max_by {|work| work.vote_count} %>
<h5>Media Spotlight: <%= link_to(top_work.title, work_path(top_work.id)) %> by <%= top_work.creator%></h5>

<h6><%= top_work.vote_count %> votes - <%= top_work.description%></h6><br>


<h5>Top Movies</h5>
<ul>
  <% sorted_movies = @movies.sort_by {|movie| -movie.vote_count}.first(10) %>
  <% sorted_movies.each do |movie|%>
  <li><%= link_to movie.title, work_path(movie.id) %> by <%= movie.creator %></li>
  <% end %>
</ul>

<h5>Top Books</h5>
<ul>
  <% sorted_books = @books.sort_by {|book| -book.vote_count}.first(10) %>
  <% sorted_books.each do |book|%>
  <li><%= link_to book.title, work_path(book.id) %> by <%= book.creator %></li>
  <% end %>
</ul>

<h5>Top Albums</h5>
<ul>
  <% sorted_albums = @albums.sort_by {|album| -album.vote_count}.first(10) %>
  <% sorted_albums.each do |album|%>
  <li><%= link_to album.title, work_path(album.id) %> by <%= album.creator %></li>
  <% end %>
</ul>
