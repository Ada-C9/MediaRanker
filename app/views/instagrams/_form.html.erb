<h4>
  <% page_title ||= "Instagram Information" %>
  <%= page_title %>
</h4>
<% if @instagram.errors.any? %>
  <ul class="errors">
    <% @instagram.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @instagram do |f| %>z
<div>
  <%= f.label :handle %>
  <%= f.text_field :handle%>
</div>

<div>
  <%= f.label :posts %>
  <%= f.number_field :posts %>
</div>

<div>
  <%= f.label :followers %>
  <%= f.number_field :followers %>
</div>

<div>
  <%= f.submit %>
</div>

<% end %>

<div>
<%= link_to "List of Instagrams", instagrams_path %>
</div>
