<h1>Instagram</h1>
<section class = "add-link">
<%= link_to "Add a New Instagram", new_instagram_path%>
</section>
<section>

  <%= @instagrams.each do |instagram| %>
  <ul>
  <li>
      <%= link_to instagram.id, instagram_path(instagram) %>
  </li>
  <li>Handle:
    <%= instagram.handle %>
  </li>
  <li>Posts:
    <%= instagram.posts %>
  </li>
  <li>Followers:
    <%= instagram.followers %>
  </li>
  </ul>

  <%= link_to "Edit", edit_instagram_path(instagram) %>
    <%= link_to("Delete", instagram_path(instagram), method: :delete, data: { confirm: "Really really?" }) %>
<% end %>



</section>
