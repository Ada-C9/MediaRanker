<% if model.errors.messages.any? %>
  <section class=" alert callout">
    <ul>
      <% @book.errors.messages.each do |field, problems| %>
      <% problems.each do |problem| %>
        <li>
          <strong><%= field %></strong>
          <%problem%>
        </li>
        <% end %>
      <% end %>
    </ul>
  </section>
<% end %>
