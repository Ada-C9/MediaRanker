<% if model.errors.messages.any? %>
  <section class="alert callout">
    <ul>
      <h3>Please review the following erorrs</h3>
      <% model.errors.messages.each do |field, problems| %>
        <% problems.each do |problem| %>
          <li>
            <strong><%= field %></strong>
            <%= problem %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
<% end %>
