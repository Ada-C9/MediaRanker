<% if model.errors.messages.any? %>
  <section class="alert callout">
    <h3>A problem occurred: Could not <%= "#{action_name}"%> <%= "#{model.category}" %> </h3>
    <ul>
      <% model.errors.messages.each do |field, problems| %>
        <% problems.each do |problem| %>
          <li>
            <strong><%= field %></strong>
            <%= problem %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
<% end %>
