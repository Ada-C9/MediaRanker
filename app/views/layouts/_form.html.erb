
<%= render partial: "layouts/error_messages", locals: { model: @work } %>

<%= form_for @work do |f| %>
  <%= f.label :category %>
  <%= f.select :category, ['book', 'album', 'movie'] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :published_year %>
  <%= f.number_field :published_year %>

  <%= f.label :created_by %>
  <%= f.text_field :created_by %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit %>
<% end %>
