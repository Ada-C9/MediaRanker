    <%= csrf_meta_tags %>
  </head>

  <body>
    <nav>
      <ul>
        <li>
          <%= link_to "View top media", upvotes_index_path %>
        </li>
        <li>
          <%= link_to "View all media", works_path %>
        </li>
        <li>
          <%= link_to "Add a new work", new_work_path %>
        </li>
      </ul>
    </nav>

    <%= yield %>

  </body>
</html>
