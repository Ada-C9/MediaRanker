<main class="row">

  <section class="row spotlight">

  </section>

  <section class="top-ten-container">
    <section class="top-ten">
      <h3>Top Movies</h3>
      <ul>
        <% @works.movies.each do |work| %>
        <li>
          <h4>
            <%= link_to(work.title, work_path(work)) %>
            <small>by <%= work.creator %></small>
          </h4>
          <p><%= work.votes.count %> votes</p>
        </li>
        <% end %>
      </ul>
    </section>

    <section class="top-ten">
      <h3>Top Books</h3>
      <ul>
        <% @works.books.each do |work| %>
        <li>
          <h4>
            <%= link_to(work.title, work_path(work)) %>
            <small>by <%= work.creator %></small>
          </h4>
          <p><%= work.votes.count %> votes</p>
        </li>
        <% end %>
      </ul>
    </section>

    <section class="top-ten">
      <h3>Top Albums</h3>
      <ul>
        <% @works.albums.each do |work| %>
        <li>
          <h4>
            <%= link_to(work.title, work_path(work)) %>
            <small>by <%= work.creator %></small>
          </h4>
          <p><%= work.votes.count %> votes</p>
        </li>
        <% end %>
      </ul>
    </section>

  </section>
</main>
