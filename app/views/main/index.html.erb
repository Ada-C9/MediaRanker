<main class="row">
      <section class="row spotlight">
    <div>
      <h3><span class="media-spotlight-header">Media Spotlight:</span> <%= link_to(@works.spotlight.title)  %> by <%= @works.spotlight.creator %></h3>
      <p> <%= @works.spotlight.votes.count %> votes - <%= @works.spotlight.description %></p>
    </div>
  </section>

<hr class="root-hr">

<section class="top-ten-container">
  <section class="top-ten">
  <h3>Top Movies</h3>
  <ul>
    <% @works.top_ten_albums.each do |work| %>
      <li>
        <h4>
          <%= link_to(work.title, work_path(work)) %>
          <small>by <%= work.creator %></small>
        </h4>
        <p><%= work.votes.count %></p>
      </li>
      <% end %>
    </ul>
  </section>


  <section class="top-ten">
  <h3>Top Books</h3>
  <ul>
    <% @works.books.each do |work| %>
      <li>
        <h4>
          <%= link_to(work.title, work_path(work)) %>
          <small>by <%= work.creator %></small>
        </h4>
        <p><%= work.votes.count %></p>
      </li>
      <% end %>
    </ul>
  </section>

  <section class="top-ten">
  <h3>Top Albums</h3>
  <ul>
    <% @works.movies.each do |work| %>
      <li>
        <h4>
          <%= link_to(work.title, work_path(work)) %>
          <small>by <%= work.creator %></small>
        </h4>
        <p><%= work.votes.count %></p>
      </li>
      <% end %>
    </ul>
  </section>

</section>

  </main>
