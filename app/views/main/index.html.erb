<h1>Welcome to Media Ranker</h1>
<h2>TODO: Lists of top 10</h2>
<h3>Movies</h3>
<table>
	<thead>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Upvote</th>
    </tr>
  </thead>
	<tbody>
		<% @movies.each do |movie|  %>
	    <tr>
	      <td><%= movie.get_vote_count %></td>
	      <td><%= movie.title %></td>
	      <td><%= movie.creator %></td>
	      <td><%= movie.get_publication_year %></td>
	      <td><%= link_to "Upvote", cast_vote_path(movie.id) %></td>
	    </tr>
		<% end %>
  </tbody>
</table>

