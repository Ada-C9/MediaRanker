<body>
  <main class="row">

  <section class="row spotlight">
    <div>
      <h3>
        <span class="media-spotlight-header">Media Spotlight:</span>
        <a><%= link_to Work.top.title, work_path(@media_spotlight.id)%> by <%=@media_spotlight.creator %></a>
      </h3>
      <p><%= Work.top.votes.count %> of votes <%= Work.top.description %></p>
    </div>
  </section>

<hr class="root-hr">

<section class="top-ten-container">
  <section class = "top-ten">
    <h2>Top Movies</h2>
    <hr>
    <ul>
      <% Work.top_ten_movies.each do |work| %>
      <li>
        <%= link_to "#{work.title}", work_path(work.id) %> by <%= "#{work.creator}" %>
        <p>
          <%= "#{work.total_votes} votes" %>
        </p>
      </li>
      <% end %>
    </ul>
  </section>

  <section class="top-ten">
    <h2>Top Albums</h2>
    <hr>
    <ul>
      <% Work.top_ten_albums.each do |work| %>
      <li>
        <%= link_to "#{work.title}", work_path(work.id) %> by <%= "#{work.creator}" %>
        <p>
          <%= "#{work.votes.count} votes" %>
        </p>
      </li>
      <% end %>
    </ul>
  </section>

  <section class="top-ten">
    <h2>Top Books</h2>
    <hr>
    <ul>
      <% Work.top_ten_books.each do |work| %>
      <li>
        <%= link_to "#{work.title}", work_path(work.id) %> by <%= "#{work.creator}" %>
        <p>
          <%= "#{work.votes.count} votes" %>
        </p>
      </li>
      <% end %>
    </ul>
  </section>
</section>
