<main class="row">

  <section class="row spotlight">
    <h3>
      <span class="media-spotlight-header">
        Media Spotlight:</span> <%= link_to(@top_work.title, work_path(@top_work)) %>
      by <%= @works.top_work.creator %>
    </h3>
    <p>
      <%= @works.top_work.votes.count %> votes - <%= @works.top_work.description %>
    </p>
  </section>

  <hr class="root-hr">

  <section class="top-ten-container">
    <section class="top-ten">
      <h3>Top Movies</h3>
      <ul>
        <% @works.top_movies.each do |work| %>
        <li>
          <h4>
            <%= link_to(work.title, work_path(work)) %>
            <small>by <%= work.creator %></small>
          </h4>
          <p><%= work.votes.count %> votes</p>
        </li>
        <% end %>
      </ul>
    </section>

    <section class="top-ten">
      <h3>Top Books</h3>
      <ul>
        <% @works.top_books.each do |work| %>
        <li>
          <h4>
            <%= link_to(work.title, work_path(work)) %>
            <small>by <%= work.creator %></small>
          </h4>
          <p><%= work.votes.count %> votes</p>
        </li>
        <% end %>
      </ul>
    </section>

    <section class="top-ten">
      <h3>Top Albums</h3>
      <ul>
        <% @works.top_albums.each do |work| %>
        <li>
          <h4>
            <%= link_to(work.title, work_path(work)) %>
            <small>by <%= work.creator %></small>
          </h4>
          <p><%= work.votes.count %> votes</p>
        </li>
        <% end %>
      </ul>
    </section>

  </section>
</main>
