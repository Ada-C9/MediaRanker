<h1>Media Spotlight</h1>
<%= link_to @media_spotlight.title, work_path(@media_spotlight.id) %> by <%= @media_spotlight.creator %>

<h2>Top Movies</h2>

<ul>
  <% @top_movies.each do |movie| %>
    <li><%= link_to movie.title, work_path(movie.id) %> by <%= work.creator %></li>
  <% end %>
</ul>

<h2>Top Albums</h2>

<ul>
  <% @top_albums.each do |album| %>
    <li><%= link_to album.title, work_path(album.id) %> by <%= work.creator %></li>
  <% end %>
</ul>

<h2>Top Books</h2>

<ul>
  <% @top_books.each do |book| %>
    <li><%= link_to book.title, work_path(book.id) %> by <%= work.creator %></li>
  <% end %>
</ul>
