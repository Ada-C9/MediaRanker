<h1>Media Ranker</h1>

<section>
  <h3>Media Spotlight Section</h3>
</section>

<% categories = Work.make_category_hash %>
<% categories.each do |category| %>
  <h3><%= category %></h3>
  <% works = @works.where(category: category) %>
  <% i = 0 %>
  <% while i < Work.num_runs(works) %>
    <strong><%= link_to works[i].title, work_path(works[i][:id]) %></strong>
    <span> by <%= works[i].creator %></span>
    <br>
    <% i += 1%>
  <% end %>
<% end %>
