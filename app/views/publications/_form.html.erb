<h3><%= page_title %></h3>
<section>
  <%= form_for @publication do |f| %>
    <%= f.label :category %>
    <%= f.select :category, Publication.return_all_categories %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :creator %>
    <%= f.text_field :creator %>
    <%= f.label :publication_year %>
    <%= f.text_field :publication_year %>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.submit submit_value %>
  <% end %>
</section>
