<section class="form-style">
<h2><%= page_title %></h2>

<%= form_for @publication do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :category %>
  <%= f.select :category, [['Book', "book"], ['Album', "album"], ['Movie', "movie"]] %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year, size: 10 %>

  <%= f.label :description %>
  <%= f.text_area :description, rows: 2, cols: 5 %>

  <%= f.submit %>
<% end %>
</section>
