<main class="row">
  <h3>List of works</h3>

  <section class="media-table">
      <table>
        <thead>
          <h4>Albums</h4>
          <tr>
            <th width=80>Votes</th>
            <th>Title</th>
            <th>Created By</th>
            <th width=100>Published</th>
            <th width=100>Upvote</th>
          </tr>
        </thead>
        <tbody>

          <% @albums.each do |album| %>
            <tr>
              <td><%= album.get_votes %></td>
              <td><%= link_to album.title, publication_path(album.id) %></td>
              <td><%=album.creator%></td>
              <td><%= album.publication_year %></td>
              <td><%= link_to "Upvote", new_publication_vote_path(album.id), class: "button upvote" %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>


      <table>
        <thead>
          <h4>Books</h4>
          <tr>
            <th width=80>Votes</th>
            <th>Title</th>
            <th>Created By</th>
            <th width=100>Published</th>
            <th width=100>Upvote</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.get_votes %></td>
              <td><%= link_to book.title, publication_path(book.id) %></td>
              <td><%= book.creator %></td>
              <td><%= book.publication_year %></td>
                <td><%= link_to "Upvote", new_publication_vote_path(book.id), class: "button upvote" %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>


      <table>
        <thead>
          <h4>Movies</h4>
          <tr>
            <th width=80>Votes</th>
            <th>Title</th>
            <th>Created By</th>
            <th width=100>Published</th>
            <th width=100>Upvote</th>
          </tr>
        </thead>
        <tbody>
          <% @movies.each do |movie| %>
            <tr>
              <td><%= movie.get_votes %></td>
              <td><%= link_to movie.title, publication_path(movie.id) %></td>
              <td><%= movie.creator %></td>
              <td><%= movie.publication_year %></td>
                <td><%= link_to "Upvote", new_publication_vote_path(movie.id), class: "button upvote" %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </section>
</main>
