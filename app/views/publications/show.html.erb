<article class="media-details">
 <h3><%= @publication.title %></h3>
 <p>Created by: <%= @publication.creator %></p>
 <p>Published: <%= @publication.publication_year %></p>
 <p>Description: <%= @publication.description %></p>
 <section>
   <a class="button" href="/">Back to media ranks</a>
   <a class="button" href="/publications/<%= @publication.id %>/edit">Edit</a>
   <a class="button" rel="nofollow" data-method="post" href="/works/314/upvote">Upvote</a>
   <a class="alert button" data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/publications/<%= @publication.id %>">Delete</a>
 </section>
</article>
