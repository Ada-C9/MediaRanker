<!-- top work -->
<section class="media-spotlight">

  <h3><span class="media-spotlight-header">Media Spotlight: </span>
  <%= link_to @top_work.title, work_path(@top_work) %>
  by <%= @top_work.creator %>
  </h3>
  <p>
    <%= @top_work.votes.count %> votes - <%= @top_work.description %>
  </p>

</section>

<hr />

<!-- top tens -->

<section class="top-ten-container">

  <section class="top-ten">
    <h3>Top Movies</h3>
    <ul>
      <% Work.top_movies.each do |movie| %>
        <li>
          <h4>
            <%= link_to movie.title, work_path(movie), class: "link" %>
            <small>
               by <%= movie.creator %>
            </small>
          </h4>
          <p>
            <%= movie.votes.count %> votes
          </p>
        </li>
      <% end %>
    </ul>

  </section><!-- top ten movies -->

  <section class="top-ten">
    <h3>Top Books</h3>
    <ul>
      <% @top_books.each do |book| %>
        <li>
          <h4>
            <%= link_to book.title, work_path(book), class: "link" %>
            <small>
               by <%= book.creator %>
            </small>
          </h4>
          <p>
            <%= book.votes.count %> votes
          </p>
        </li>
      <% end %>
    </ul>

  </section><!-- top ten books -->

  <section class="top-ten">
    <h3>Top Albums</h3>
    <ul>
      <% @top_albums.each do |album| %>
        <li>
          <h4>
            <%= link_to album.title, work_path(album), class: "link" %>
            <small>
               by <%= album.creator %>
            </small>
          </h4>
          <p>
            <%= album.votes.count %> votes
          </p>
        </li>
      <% end %>
    </ul>

  </section><!-- top ten albums -->

</section><!-- top tens container -->
