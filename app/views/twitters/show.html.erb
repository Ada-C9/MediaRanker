<section>
  <h2>Twitter Details</h2>
  <h3><%= @twitter.handle %></h3>
  <p><%= @twitter.followers %></p>
  <li>
    <%= link_to "Edit", edit_twitter_path(@twitter) %>
    <%= link_to("Delete", twitter_path(@twitter), method: :delete, data: { confirm: "Are you sure you want to delete this twitter?" }) %>
    <%= link_to "List of twitters", twitters_path %>
  </li>
</section>
