<section class="media-spotlight">
  <h3>
    <span>Media Spotlight: </span>
    <div id="spotlight"><%= link_to @featured.title, work_path(@featured.id) %> by <%= @featured.creator %></div></h3>
  <p>
    <%= @featured.get_count %> votes - <%= @featured.description %></p>
</section>

<section class="top-ten">
  <% @sort.each do |groups| %>
  <article>
    <h2><%= groups.first.category %></h2>
    <ul>
      <% groups.each do |type| %>
      <li>
        <div id="title"><%= link_to type.title, work_path(type.id) %></div>
        <small>by <%= type.creator %></small><br />
        <p>
          <%= type.upvotes.count %> votes
        </p>
      </li>
      <%end %>
    </ul>
  </article>
  <% end %>


</section>
