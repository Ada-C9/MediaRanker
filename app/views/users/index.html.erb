<h3>List of All Users</h3>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th width="150">Votes</th>
      <th width="150">Joined</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user_path(user.id) %></td>
      <td><%= user.votes.count %></td>
      <td><%= user.join_date%></td>
    </tr>
    <% end %>
  </tbody>
</table>
