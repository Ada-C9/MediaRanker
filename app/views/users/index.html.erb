<main class="row">
  <h3>List of Users</h3>
  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Votes</th>
        <th>Joined</th>
      </tr>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.username, user_path(user[:id]) %></td>
          <td><%= user.votes.count %></td>
          <td><%= pretty_date(user) %></td>
        </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
</main>
