<section>
  <div>
    <h2>
      <strong>
        List of Users
      </strong>
    </h2>
  </div>

  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Votes</th>
        <th>Joined</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to(user.name, user_path(user)) %>
        </td>
        <td>
          <%= user.votes.count %>
        </td>
        <td>
          <%= user.joined %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>
