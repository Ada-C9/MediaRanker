<h2>List of users</h2>



<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Votes</th>
      <th>Joined</th>
    </tr>
  </thead>
  <tbody>

    <%@user.each do |user|%>
    <tr>
      <td><%= link_to user.username, user_path(user.id)%></td>
      <td><%= user.total_votes%></td>
      <td><%= user.created_at.strftime("%b %d, %Y")%></td>
    </tr>
    <%end%>

  </tbody>
</table>

<%= link_to "View top media", root_path, class: "button"%>
