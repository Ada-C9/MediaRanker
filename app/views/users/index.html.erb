<h3>List of users</h3>
<table>

  <thead>
    <tr class="users-table">
      <th>
        Username
      </th>
      <th>
        Votes
      </th>
      <th>
        Joined
      </th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr class="users-table">
      <td>
        <%= link_to user.username, user_path(user) %>
      </td>
      <td>
        <%= user.votes.count %>
      </td>
      <td>
        <%= user.format_date %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>
