<h3>All Users</h3>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Votes</th>
      <th>Joined</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user_path(user) %></td>
        <td><%= pluralize(user.votes.count, "vote") %></td>
        <td><%= user_creation_date(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
