<h3>List of Users</h3>

<table class=user-table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Votes</th>
      <th>Joined</th>
    </tr>
  </thead>
  <tbody>
    <ul class="user-list">
      <% @users.each do |u| %>
      <tr>
        <td>
          <%= link_to("#{u.name}", user_path(u)) %>
        </td>
        <td>Vote Count TBD</td>
        <td>
          <%= u.created_at.to_date.to_formatted_s(:long)%>
        </td>
      </tr>
      <% end %>
    </ul>
  </tbody>
</table>
