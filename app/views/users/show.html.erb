<h3>User Summary: <%= @current_user.username %></h3>
<p>Joined site <%= @current_user.created_at.strftime("%B %d, %Y") %></p>

<h4>Votes</h4>
<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
    <% @current_user.upvotes.each do |upvote| %>
      <tr>
        <td><%= link_to upvote.work.work_title, work_path(upvote.work.id) %> </td>
        <td><%= upvote.work.work_creator %></td>
        <td><%= upvote.work.work_publication_year %> </td>
        <td><%= upvote.work.work_category %> </td>
        <td><%= upvote.created_at.strftime("%B %d, %Y") %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "See all Users", users_path, class: "button" %>
<%= link_to "Back to Media List", root_path, class: "button" %>
