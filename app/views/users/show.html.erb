<main class="row">
    <h3>User Summary: <%= link_to(@user.username, user_path(@user.id)) %></h3>
    <p>Joined site <%= @user.created_at.strftime("%b %d, %Y") %></p>
    <h2>Votes</h2>
    <table>
      <thead>
        <tr>
          <th>Media Title</th>
          <th>Created By</th>
          <th>Published</th>
          <th>Category</th>
          <th>Voted On</th>
        </tr>
      </thead>
      <tbody>
        <%# TODO: add in albums and there votes per user %>
      </tbody>
    </table>
    <%= link_to "See all Users", users_path, class: "button" %>
    <%= link_to "Back to Media List", root_path, class: "button" %>
</main>
