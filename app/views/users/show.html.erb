<h3>User Summary: <%= link_to @user.user_name, user_path(@user) %></h3>
<p>
  Joined site <%= @user.created_at.strftime("%B %d, %Y") %>
</p>

<h4>Votes</h4>
<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
    <% @user.votes.each do |vote| %>
    <tr>
      <td>
        <%= link_to vote.art.title, art_path(vote.art) %>
      </td>
      <td>
        <%= vote.art.creator %>
      </td>
      <td>
        <%= vote.art.pub_year %>
      </td>
      <td>
        <%= vote.art.category.capitalize %>
      </td>
      <td>
        <%= vote.created_at.strftime("%B %d, %Y") %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "See all Users", users_path, class: "button" %>
<%= link_to "Back to Media List", root_path, class: "button" %>
