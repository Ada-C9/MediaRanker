User Summary: <%= @user.name %>
Joined site <%=@user.created_at.to_datetime.to_formatted_s(:long_ordinal)%>

<h4>Votes</h4>
<table>
  <thead>
    <tr>
      <th>
        Media Title
      </th>
      <th>
        Created By
      </th>
      <th>
        Published
      </th>
      <th>
        Category
      </th>
      <th>
        Voted On
      </th>
    </tr>
  </thead>
  <tbody>

<%@user.votes.each do |vote| %>
      <tr>
        <td>
          <%= link_to vote.work.title, work_path(vote.work.id)%>
        </td>
        <td>
          <%= vote.work.created_by %>
        </td>
        <td>
          <%= vote.work.year %>
        </td>
        <td>
          <%= vote.work.category %>
        </td>
        <td>
          <%=vote.created_at.to_datetime.to_formatted_s(:long_ordinal)%>
        </td>
      </tr>
      <%end%>



</tbody>
</table>


      <%= link_to "See all Users", users_path, class:"button"  %>
      <%= link_to "Back to Media List", works_path, class:"button"  %>
