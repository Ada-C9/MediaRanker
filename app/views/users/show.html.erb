<h3>User Summary: <%= @user.name%></h3>
<p>Joined site <%= @user.created_at %></p>
<h4>Votes</h4>
<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
    <% @user.votes.each do | vote | %>
      <tr>
        <% publication = vote.publication %>
        <td><%= link_to publication.title, publication_path(publication.id) %></td>
        <td><%= publication.creator %></td>
        <td><%= publication.publication_year %></td>
        <td><%= publication.category %></td>
        <td><%= vote.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "See all Users", users_path %>
<%= link_to "Back to Top Media", root_path %>
