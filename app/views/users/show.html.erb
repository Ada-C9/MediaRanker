<h1>Users#show</h1>

<body>



  <main class="row">
    <h3>User Summary: <%= @user.name %></h3>
<p>Joined site: <%= @user.created_at %></p>

<h4>Votes</h4>
<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
      <% @user.report_user_votes(@user.id).each do |vote| %>
      <tr>
        <% work = Work.find(vote.work_id) %>
        <td><%= link_to work.title, work_path(work.id)  %> </td>
        <td><%= work.creator %></td>
        <td><%= work.year_released %></td>
        <td><%= work.category %></td>
        <td><%= vote.created_at %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<%= link_to "See all Users", users_path, class: 'button' %>
<%= link_to "Back to Media List", works_path, class: 'button' %>

  </main>
</body>
