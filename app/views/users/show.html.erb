<h3>User Summary: <%= link_to(@user.username, user_path(@user.id))%></h3>

<p>Joined site <%= @user.join_date%></p>

<h4>Votes</h4>
<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
    <% @user.votes.each do |v| %>
    <tr>
      <td><%= link_to v.work.title, work_path(v.work) %></td>
      <td><%= v.work.creator %></td>
      <td><%= v.work.publication_year %></td>
      <td><%= v.work.category.name.capitalize %></td>
      <td><%= v.vote_date %></td>
    </tr>
    <% end %>

  </tbody>
</table>

<%= link_to("See all Users", users_path, class: "button") %>
<%= link_to("Back to Media List", root_path, class: "button") %>
