<h3>
  User Summary:
  <%= link_to @user.username, user_path(@user) %>
</h3>

<p>
  Joined site <%= @user.created_at.strftime("%b %d, %Y") %>
</p>

<h4>Votes</h4>


<table>

  <thead>
    <tr>
      <th>
        Media Title
      </th>
      <th>
        Created By
      </th>
      <th>
        Published
      </th>
      <th>
        Category
      </th>
      <th>
        Voted On
      </th>
    </tr>
  </thead>

  <tbody>
    <% @user.votes.each do |vote| %>
    <tr>
      <td>
        <%= link_to vote.work.title, work_path(vote.work) %>
      </td>
      <td>
        <%= vote.work.creator %>
      </td>
      <td>
        <%= vote.work.publication_year %>
      </td>
      <td>
        <%= vote.work.category %>
      </td>
      <td>
        <%= vote.format_vote_date %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>
