<% @user = User.find(session[:user_id])%>
<h3>User Summary: <%= @user.name %></h3>

<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
    <% @user.votes.each do |vote|%>
    <tr>
      <td><%= vote.work.title %></td>
      <td><%= vote.work.creator %></td>
      <td><%= vote.work.publication_year %></td>
      <td><%= vote.work.category %></td>
      <td><%= vote.created_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>
