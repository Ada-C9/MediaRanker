<ul>
  <li>
    User Summary: <%= @user.name %>
  </li>
  <li>
    Joined site <%= @user.joined %>
  </li>
</ul>

<h2>
  Votes
</h2>

<table>
  <thead>
    <tr>
      <th>Media Tile</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>

  <tbody>
    <% @user.votes.each do |vote| %>
    <tr>
      <td>
        <%= link_to(vote.work.title, work_path(vote.work)) %>
      </td>
      <td>
        <%= vote.work.creator%>
      </td>
      <td>
        <%= vote.work.publication_year %>
      </td>
      <td>
        <%= vote.date %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
