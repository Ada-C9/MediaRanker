<h3><%= "User Summary: #{@user.username}" %></h3>

<p><%= "Joined site #{@user.created_at.strftime("%b %d, %Y")}" %></p>

<section>
<%= link_to "See all Users", users_path, class: "button" %>

<%= link_to "Back to Media List", root_path, class: "button" %>

</section>

<h4><%= "Votes" %></h4>

<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>

  <tbody>

    <% @user.votes.each do |v| %>

    <tr>
      <td><%= link_to v.work.title, work_path(v.work.id) %></td>
      <td><%= "#{v.work.creator}" %></td>
      <td><%= "#{v.work.publication_year}" %></td>
      <td><%= "#{v.work.category}" %></td>
      <td><%= "#{v.created_at.strftime("%b %d, %Y")}" %></td>
    </tr>

    <% end %>

  </tbody>
</table>
