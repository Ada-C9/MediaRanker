<h3>User Summary: <%=@user.name%></h3>
<p>Joined Site: <%=@user.created_at.to_s(:long) %></p>

<h4>Votes</h4>
<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
    <% @user.votes.each do |vote| %>
    <tr>
      <td><%=link_to vote.work.title, work_path(vote.work.id)%></td>
      <td><%=vote.work.creator%></td>
      <td><%=vote.work.published%></td>
      <td><%=vote.work.category%></td>
      <td><%=vote.created_at.strftime("%b %d, %Y")%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%=link_to "See All Users", users_path, class: "button" %></li>
<%=link_to "Back To Media List", root_path, class: "button" %></li>
