<main class="row">

  <h3>User Summary: <%= link_to(@user.name, user_path(@user)) %></h3>

  <p>Joined site <%= @user.joined %></p>

  <h4>Votes</h4>

  <table>
    <thead>
      <tr>
        <th width="80">Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th width="100">Published</th>
        <th width="100">Upvote</th>
      </tr>
    </thead>

    <tbody>
      <% @works.each do |work| %>
      <tr>
        <td>
          <%=  %>
        </td>
        <td>
          <%= link_to(work.title, work_path(work)) %>
        </td>
        <td>
          <%= work.creator %>
        </td>
        <td>
          <%= work.publication_year %>
        </td>
        <td>
          Upvote
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to("Back to Media List", root_path, class: "button") %>

</main>
