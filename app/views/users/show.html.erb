<main>
  <h3>User Summary: <%= @user.username %></h3>
  <p>Joined site <%= display_date(@user.created_at) %></p>
  <h4>Votes</h4>

  <table>
    <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
    </thead>
    <tbody>
      <% @user.works.each do |work| %>
        <tr>
          <td><%= link_to "#{work.title}", work_path(work) %></td>
          <td><%= work.creator %></td>
          <td><%= work.publication_year %></td>
          <td><%= work.category %></td>
          <td><%= display_date(work.votes.first.created_at) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "See all users", users_path, class: "button" %>
  <%= link_to "Back to media list", root_path, class: "button" %>
</main>
