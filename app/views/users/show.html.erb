<h3>User Summary: <%=link_to @user.name, user_path(@user.id)%></h3>
<p>Joined site <%=@user.created_at%></h3>

<h4>Votes</h4>
<table>
<thead>
  <tr>
    <th>Media Title</th>
    <th>Created By</th>
    <th>Category</th>
    <th>Voted On</th>
  </tr>
</thead>
<tbody>
  <tr>
    <%@user.works.each do |work|%>
      <td><%=link_to work.title ,work_path(work.id)%></td>
      <td><%=work.creator%></td>
      <td><%=work.publication_year%><td>
      <td><%=work.category%><td>
      <td><%=work.votes[0].created_at%><td>
  </tr>
  <%end%>
</tbody>
</table>

<a class="button" href="/users">See all Users</a>
<a class="button" href="/">Back to Media List</a>
