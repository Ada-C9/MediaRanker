<h3 class="media-spotlight">
<span >Media Spotlight: </span>
<%= link_to @spotlight.title, work_path(@spotlight)%>
by <%= @spotlight.creator %>
</h3>

<p>
  <%= pluralize(@spotlight.votes.count, "vote") %>
  <%= @spotlight.description %>
</p>

<hr />

<section class="top-ten">
  <h3>Top Albums</h3>
  <ul>
     <% Work.top_ten_albums.each do |work| %>
     <li>
       <%= link_to work.title, work_path(work) %> by
       <%= work.creator %>
       <%= work.votes.count %>
     </li>
     <% end %>
  </ul>
</section>

<section class="top-ten">
  <h3>Top Books</h3>
  <ul>
    <% Work.top_ten_books.each do |work| %>
    <li>
      <%= link_to work.title, work_path(work) %> by
      <%= work.creator %>
      <%= work.votes.count %>
    </li>
    <% end %>
  </ul>
</section>

<section class="top-ten">
  <h3>Top Movies</h3>
  <ul>
    <% Work.top_ten_movies.each do |work| %>
    <li>
      <%= link_to work.title, work_path(work) %> by
      <%= work.creator %>
      <%= work.votes.count %>
    </li>
    <% end %>
  </ul>
</section>
