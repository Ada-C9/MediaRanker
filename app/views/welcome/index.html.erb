<% if @spotlight %>
<section class="row spotlight">
<div>
<h3>
  <span class="media-spotlight-header">Media Spotlight</span> <%= link_to @spotlight.title, work_path(@spotlight.id)%> by <%= @spotlight.creator %>
</h3>
<p>
  <%= @spotlight.upvotes_count %> votes - <%= @spotlight.description %>
</p>
<% end %>
</div>
</section>
<hr class="root-hr" />
<section class="top-ten-container">
  <section class="top-ten">
    <h3>Top Movies</h3>
    <ul>
      <% @movies.each do |movie| %>
      <li>
        <h4><%= link_to movie.title, work_path(movie)%>      <small>by </small>
          <%= movie.creator %>
        </h4>
        <p><%= movie.upvotes_count %> votes</p>
      </li>
      <% end %>
    </ul>
  </section>
  <section class="top-ten">
    <h3>Top Books</h3>
    <ul>
      <% @books.each do |book| %>
      <li>
        <h4><%= link_to book.title, work_path(book)%>           <small>by </small>
        <%= book.creator %>
      </hr>
        <p><%= book.upvotes_count %> votes</p>
      </li>
      <% end %>
    </ul>
  </section>
  <section class="top-ten">
    <h3>Top Albums</h3>
    <ul>
      <% @albums.each do |album| %>
      <li>
        <h4><%= link_to album.title, work_path(album)%>
        <small>by </small>
        <%= album.creator %>
      </h4>
        <p><%= album.upvotes_count %> votes</p>
      </li>
      <% end %>
    </ul>
  </section>
</section>
