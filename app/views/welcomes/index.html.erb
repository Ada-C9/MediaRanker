
<section class="row spotlight">
  <div>
    <h3>
      <span class="media-spotlight-header">Media Spotlight: </span>
      <%= link_to @top_work.title, work_path(@top_work)%> by <%= @top_work.creator %>
    </h3>
    <p><%= @top_work.total_votes %> votes - <%= @top_work.description %></p>
  </div>
</section>


<section class="row top-ten-container">

  <section class="top-ten">
    <h3>Top Movies</h3>
    <ul>
      <% @movies.each do |movie| %>
        <li>
          <h4>
            <%= link_to movie.title, work_path(movie)%>
            <small>by <%= movie.creator %></small>
          </h4>
          <p><%= movie.total_votes %> votes</p>
        </li>
      <% end %>
    </ul>
  </section>

  <section class="top-ten">
    <h3>Top Books</h3>
    <ul>
      <% @books.each do |book| %>
        <li>
          <h4>
            <%= link_to book.title, work_path(book)%>
            <small>by <%= book.creator %></small>
          </h4>
          <p><%= book.total_votes %> votes</p>
        </li>
      <% end %>
    </ul>
  </section>

  <section class="top-ten">
    <h3>Top Albums</h3>
    <ul>
      <% @albums.each do |album| %>
        <li>
          <h4>
            <%= link_to album.title, work_path(album)%>
            <small>by <%= album.creator %></small>
          </h4>
          <p><%= album.total_votes %> votes</P>
        </li>
      <% end %>
    </ul>
  </section>

</section>
