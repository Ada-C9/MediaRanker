<%= form_for @work do |f| %>

  <%= f.label :category %>
  <%= f.select :category, options_for_select(%w(movie album book)) %>

  <%= f.label :title %>
  <%= f.text_area :title %>

  <%= f.label :creator %>
  <%= f.text_area :creator %>

  <%= f.label :publication_year %>
  <%= f.text_area :publication_year %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit %>
<% end %>
