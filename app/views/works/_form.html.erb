<%= form_for @work do |f| %>
<%= f.label :Category%>
  <%= f.select :category,["album", "movie", "book"]%>
  <br>
  <%= f.label :Title%>
  <%= f.text_field :title %>
  <br>

  <%= f.label :Creator %>
  <br>
  <%= f.text_field :creator%>
  <br>
  <%= f.label :Publication_year %>
  <br>
  <%= f.text_field :publication_year%>
  <br>
  <%= f.label :Description %>
  <br>
  <%= f.text_field :description%>
  <br>

  <%= f.submit %>

<% end %>
