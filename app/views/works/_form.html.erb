<h3 class="page-header"><%=page_title %></h3>
<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
    <li>
      <strong><%= field.capitalize %></strong> <%= message %>
    </li>
    <% end %>
  </ul>
<% end %>

<section class="form">
  <%= form_for @work do |f| %>

    <%= f.label :Category %>
    <%= f.select :work_category, [
      "album", "book", "movie"
    ] %>

    <%= f.label :Title %>
    <%= f.text_field :work_title %>

    <%= f.label :Creator %>
    <%= f.text_field :work_creator %>

    <%= f.label :Publication_year %>
    <%= f.text_field :work_publication_year %>

    <%= f.label :Description %>
    <%= f.text_area :work_description %>

  <%= f.submit  %>

  <% end %>
</section>
