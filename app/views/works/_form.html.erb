<h2 class="my-class"><%= page_title %></h2>

<%= form_for @work do |f| %>
  <%= f.label :category %>
  <%= f.select :category, Work.valid_categories, :prompt => "Select One" %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit class: "button"%>
<% end %>
