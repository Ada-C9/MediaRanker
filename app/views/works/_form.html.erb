<h2><%= page_title %></h2>

<%= form_for @work do |f| %>
  <%= f.label :category %>
  <%= f.select(:category, ["Book", "Album", "Music"]) %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :published %>
  <%= f.text_field :published %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit %>
<% end %>
