<h3 class="page-title"><%= page_title %></h3>

<%= form_for @work do |f| %>
  <%= f.label :category %>
  <%= f.select :category, [["album"], ["book"], ["movie"]] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_area :creator %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit %>

<% end %>
