<h2 class="my-class"><%= page_title %></h2>

<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |field, message| %>
      <li>
        <strong><%= field.capitalize %>: </strong><%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @work do |f| %>

  <%= f.label :category %>
  <%= f.select :category, ['album','book','movie'], :prompt => 'Select Work Type' %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :year_released %>
  <%= f.text_field :year_released %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit %>
<% end %>
