<h3>
  <%= page_title %>
</h3>

<%= form_for @work do |f| %>
  <%= f.label :category %>
  <%= f.select :category_id, Category.all.map { |category| [category.name, category.id]} %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :creator %>
  <%= f.text_field :creator %>
  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit action_name %>
<% end %>
