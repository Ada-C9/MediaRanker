<section class="form-style">
<h2><%= page_title %></h2>

<%= form_for @work do |f| %>

<%= f.label :category %>
<%= f.select :category, [['Book', "book"], ['Album', "album"], ['Movie', "movie"]] %>


<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :creator %>
<%= f.text_field :creator %>

<%= f.label :publication_year %>
<%= f.text_field :publication_year %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.submit 'Create Work', :class => "button"%>

<% end %>
</section>
