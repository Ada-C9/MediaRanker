<%= form_for @work do |f| %>
  <%= f.label :category %>
  <%= f.select :category, [["album"], ["book"], ["movie"]], {}, {class: "form-control"} %><br/>

  <%= f.label :title %>
  <%= f.text_area :title %><br/>

  <%= f.label :creator %>
  <%= f.text_area :creator %><br/>

  <%= f.label :publication_year %>
  <%= f.text_area :publication_year %><br/>

  <%= f.label :description %>
  <%= f.text_area :description %><br/>

  <%= f.submit %>
<% end %>
