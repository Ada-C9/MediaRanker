<section>

  <%= render partial: "layouts/error_messages", locals: { model: @work } %>

  <%= form_for @work do |f| %>

    <%= f.label :category %>
    <%= f.select :category, ['album', 'book', 'movie'] %>
    <!-- f.select :category, Work.all.map{ |work| [work.category]}.uniq ] -->

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :creator %>
    <%= f.text_field :creator %>

    <%= f.label :publication_year %>
    <%= f.text_field :publication_year %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit class: "button small" %>
  <% end %>

</section>
