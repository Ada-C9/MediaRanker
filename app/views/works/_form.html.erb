<%= form_for @work do |f|%>

  <%= f.label "Category:" %>
  <%= f.select :category, ["album", "book", "movie"], :prompt => "Select One" %>
  <br>
  <%= f.label "title:" %>
  <%= f.text_field :title %>
  <br>
  <%= f.label "creator:" %>
  <%= f.text_field :creator %>
  <br>
  <%= f.label "publication_year:" %>
  <%= f.text_field :publication_year %>
  <br>
  <%= f.label "description:" %>
  <%= f.text_field :description %>
  <br>

  <%= f.submit %>

<% end %>
