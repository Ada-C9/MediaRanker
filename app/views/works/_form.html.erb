<%= form_for @work do |f| %>
<%= f.label :Category%>
<%= f.select :category,["album", "movie", "book"]%>
<br>
<%= f.label :Title%>
<%= f.text_field :title %>

<%= f.label :Creator %>

<%= f.text_field :creator%>

<%= f.label :Publication_year %>
<%= f.text_field :publication_year%>
<%= f.label :Description %>
<%= f.text_field :description%>

<%= f.submit class:"button"%>

<% end %>
