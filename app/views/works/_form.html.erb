<h3>
  <%= page_title%>
</h3>

<%= render partial: "layouts/error_messages", locals: { model: @work } %>

<%= form_for @work do |f| %>
  <%= f.label :category, "Category" %>
  <%= f.select :category, ["album", "book", "movie"] %>

  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>

  <%= f.label :creator, "Creator" %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year, "Publication year" %>
  <%= f.text_field :publication_year %>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>

  <%= f.submit action_name, class: "hallow button"%>
<%end%>
