<section class="info-form">
  <h3 class="teal-title"><%= page_title %></h3>
  <%= form_for @work do |f| %>
    <%= f.label :category %>
    <%= f.select :category, @category_list %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :creator %>
    <%= f.text_field :creator %>

    <%= f.label :publication_year %>
    <%= f.text_field :publication_year %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit class:"button"%>
  <% end %>
</section>
