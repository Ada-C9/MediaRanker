<%= form_for @work do |f| %>

  <%= f.label :category %>
  <%= f.select :category, ["album","book","movie"] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.number_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit class:"button" %>


<% end %>
