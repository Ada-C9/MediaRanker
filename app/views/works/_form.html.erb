<% if @work.errors.any? %>
  <p>A problem occurred: Could not <%= error_method %> <%= @work.category %></p>
  <ul class=“errors”>
    <% @work.errors.each do |field, message| %>
      <li><%= field %>: <%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1> <%= page_title %> </h1>

<%= form_for @work do |f| %>
 <%= f.label :category %>
 <%= f.select :category, [["album"], ["book"], ["movie"]] %>


 <%= f.label :title %>
 <%= f.text_area :title %>

 <%= f.label :creator %>
 <%= f.text_area :creator %>

 <%= f.label :publication_year %>
 <%= f.text_area :publication_year %>

 <%= f.label :description %>
 <%= f.text_area :description %>

 <%= f.submit %>
<% end %>
