<%= render partial: "layouts/error_messages", locals: { model: @work } %>

<%= form_for @work do |f| %>
  <%= f.label :category %>
  <%= f.select :category, ["album", "book", "movie"] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_area :creator %>

  <%= f.label :publication_year %>
  <%= f.number_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit class: "button" %>
<% end %>
