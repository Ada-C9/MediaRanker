<h2 class="my-class"><%= page_title %></h2>

<% if @work.errors.any? %>
<ul class="errors">
  <% @work.errors.each do |field, message| %>
  <li>
    <strong><%=field.capitalize %>:</strong><%= message %>
  </li>
  <% end %>
</ul>
<% end %>

<%= form_for @work do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>


  <%= f.submit %>
<% end %>
