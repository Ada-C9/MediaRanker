<table>
  <thead>
    <tr>
      <th width="80">Votes</th>
      <th>Title</th>
      <th width="400">Created By</th>
      <th width="200">Published</th>
      <th width="100">Upvote</th>
    </tr>
  </thead>

  <tbody>
    <% works.each do |work| %>
    <tr>
      <td>
        <%= work.votes.count %>
      </td>
      <td>
        <%= link_to(work.title, work_path(work)) %>
      </td>
      <td>
        <%= work.creator %>
      </td>
      <td>
        <%= work.publication_year %>
      </td>
      <td>
        <%= link_to("Upvote", upvote_path(work), class: "button") %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
