<section class="row spotlight">
  <div>
    <h3><span class="media-spotlight-header">Media Spotlight:</span>
    <% if @spotlight.nil? %>
      no top work
    <% else %>
      <%= link_to "#{@spotlight.title}", work_path(@spotlight) %> by <%= @spotlight.creator %></h3>
      <p><%= @spotlight.votes.count %> votes - <%= @spotlight.description %></p>
    <% end %>
  </div>
</section>

<hr class="root-hr">

<section class="top-ten-container">
  <section class="top-ten">
    <h3>Top Albums</h3>
    <%= render partial: "top-ten", collection: @works.albums.top_ten, as: :item %>
  </section>

  <section class="top-ten">
    <h3>Top Books</h3>
    <%= render partial: "top-ten", collection: @works.books.top_ten, as: :item %>
  </section>

  <section class="top-ten">
    <h3>Top Movies</h3>
    <%= render partial: "top-ten", collection: @works.movies.top_ten, as: :item %>
  </section>
</section>
