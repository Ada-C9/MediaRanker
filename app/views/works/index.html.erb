<h2>List of works</h2>
<h4>Albums</h4>
<table class="hover">
  <th>
    <tr class="table-header">
      <td>Votes</td>
      <td>Title</td>
      <td>Created by</td>
      <td>Publication</td>
      <td>Upvote</td>
    </tr>
  </th>
  <th>
    <% Work.albums.each do |work| %>
    <tr>
      <td><%= pluralize(work.votes.count, "vote") %></td>
      <td><%= link_to(work.title, work_path(work)) %></td>
      <td><%= work.creator %></td>
      <td><%= work.publication_year %></td>
      <td><%= link_to "Upvote", new_work_vote_path(work), class: "button" %></td>
    </tr>
    <% end %>
  </th>
</tbody>
</table>

