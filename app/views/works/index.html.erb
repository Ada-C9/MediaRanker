<table class="hover">
    <thead>
      <tr>
        <th width="200">Table Header</th>
        <th>Table Header</th>
        <th width="150">Table Header</th>
        <th width="150">Table Header</th>
      </tr>
    </thead>
    <tbody>
      <th>
        <h3>Albums:</h3>
        <% @works.each do |work| %>
          <% if work.category == 'album' %>
            <tr>
            <td><%= link_to(work.title, work_path(work) ) %></td>
            <td><%= work.creator %></td>
            <td><%= work.publication_year %></td>
            </tr>
          <% end %>
        <% end %>
      </th>
      <th>
        <h3>Books:</h3>
        <% @works.each do |work| %>
          <% if work.category == 'book' %>
            <tr>
            <td><%= link_to(work.title, work_path(work) ) %></td>
            <td><%= work.creator %></td>
            <td><%= work.publication_year %></td>
            </tr>
          <% end %>
        <% end %>
      </th>
      <th>
        <h3>Movies:</h3>
        <<% @works.each do |work| %>
          <% if work.category == 'movie' %>
            <tr>
            <td><%= link_to(work.title, work_path(work) ) %></td>
            <td><%= work.creator %></td>
            <td><%= work.publication_year %></td>
            </tr>
          <% end %>
        <% end %>
      </th>
    </tbody>
  </table>
