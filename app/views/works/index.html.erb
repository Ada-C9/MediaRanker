<h3>List of Works</h3>

<section class="works-table">
  <h4>Albums</h4>
  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @albums.each do |album| %>
        <tr>
          <td><%= pluralize(album.votes.count, "vote") %></td>
          <td><%= link_to album.title, album %></td>
          <td><%= album.creator %></td>
          <td><%= album.publication_year %></td>
          <td><%= link_to("Upvote", upvote_work_path(album), method: :post, class: "button")%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

