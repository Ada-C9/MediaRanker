<h3>List of works</h3>

<section class="media-table">
  <h4>Albums</h4>
  <table>
    <thead>
      <tr>
        <th width="100">Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th width="100">Published</th>
        <th width="100">Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @albums.each do |album| %>
      <tr>
        <td><%= album.total_votes %></td>
        <td><%= link_to album.title, work_path(album)%></td>
        <td><%= album.creator %></td>
        <td><%= album.publication_year %></td>
        <td><%= link_to "Upvote", work_votes_path(album), method: :post, class: "upvote button" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

