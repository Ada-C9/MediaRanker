<h3>List of Works</h3>
<section class="media-table">
<h4>Albums</h4>
<table>
  <tr>
    <th>Votes</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Upvote</th>
  </tr>
  <% @albums.each do |work| %>
  <tr>
    <td><%=work.upvotes_count%></td>
    <td><%=link_to work.title, work_path(work[:id])%></td>
    <td><%=work.creator%></td>
    <td><%=work.publication_year%></td>
    <td><%=link_to "Upvote", work_upvotes_path(work.id), method: :post%></td>
  </tr>
  <% end %>
</table>
</section>
