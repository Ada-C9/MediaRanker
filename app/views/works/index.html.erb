<h3>List of Works</h3>

<h4>Albums</h4>
<table>
  <th width="80">Votes</th>
  <th>Title</th>
  <th>Created By</th>
  <th width="100">Published</th>
  <th width="100">Upvote</th>

  <% @albums.each do |album| %>
  <tr>
  <td> <%= album.votes.count %> </td>
  <td><%= link_to(album.title, work_path(album))  %></td>
  <td><%= album.creator %></td>
  <td><%= album.publication_year %></td>
  <td><%= link_to "Upvote", upvote_path(album), class: "button" %></td>
  </tr>
  <% end %>
</table>

