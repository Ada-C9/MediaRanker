  <h2>List of Works</h2>

  <h3>Albums</h3>
    <table>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      <tr>

      <% @works.each do |work| %>
        <% if work.category == 'album' %>
          <tr>
            <td>Votes Placeholder</td>
            <td><%= link_to work.title, work_path(work) %><td>
            <td><%= work.creator %></td>
            <td><%= work.publication_year %></td>
            <td>Upvote button</td>
          </tr>
        <% end %>
      <% end %>
    </table>
