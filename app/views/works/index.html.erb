<h3>List of works</h3>

<section>
  <h4>Albums</h4>
    <table>
      <thead>
        <tr>
          <th>Votes</th>
          <th>Title</th>
          <th>Created by</th>
          <th>Published</th>
          <th>Upvote</th>
        </tr>
      </thead>
      <tbody>
        <%@works.where(category: "album").each do |work|%>
          <td><%=work.votes%></td>
          <td><%=link_to work.title, work_path(work[:id])%></td>
          <td><%=work.creator%></td>
          <td><%=work.publication_year%></td>
      <%end%>
      <td>Upvote</td>
    </table>
</section>

