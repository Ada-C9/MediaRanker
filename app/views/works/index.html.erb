<h3>List of works</h3>
<section class= "media-table">
  <h4>Albums</h4>
  <table>
    <th>Votes</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Upvote</th>
    <tr>
      <% @albums.each do |album| %>
      <tr>
        <td>vote count</td>
        <td><%= link_to album.title, work_path(album.id) %></td>
        <td><%= album.creator %></td>
        <td><%= album.publication_year %></td>
        <td class='button'>link for upvoting</td>
      </tr>
      <% end %>
    </tr>
  </table>
</section>
