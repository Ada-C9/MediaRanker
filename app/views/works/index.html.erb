

<main>
  <h3>List of Works</h3>

    <section class="media-table">
      <h4> Movies</h4>
        <table>
          <thead>
            <tr>
              <th>Votes</th>
              <th>Title</th>
              <th>Created By</th>
              <th>Publihsed</th>
              <th>Upvote</th>
            </tr>
          </thead>
          <tbody>
            <% @movies.each do |movie| %>
              <tr>
                <td>votes</td>
                <td><%= link_to movie.title, work_path(movie[:id]) %></td>
                <td><%= movie.creator %> </td>
                <td><%= movie.publication_year %></td>
                <td><%= link_to "Upvote", work_votes_path(movie.id), method: :post, class: "button"%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </section>

