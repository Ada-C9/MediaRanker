<sectionn class="row">
<h3>List of Works</h3>

<h4>Albums</h4>
  <section class="media-table">
<table>
  <thead>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Upvote</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @albums.each do |album|%>
      <td><%= album.votes.length%></td>
      <td><%=link_to album.title, work_path(album[:id])%> </td>
      <td> <%= album.creator %></td>
      <td> <%= album.publication_year %></td>
      <td> <%=link_to "Upvote", new_work_vote_path(album.id), class: "button upvote" %></td>

    </tr>
    <% end%>
  </tbody>
</table>

<h4>Books</h4>

<table>
  <thead>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Upvote</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @books.each do |book|%>
      <td><%= book.votes.length%></td>
      <td> <%=link_to book.title, work_path(book[:id])%></td>
      <td> <%= book.creator %></td>
      <td> <%= book.publication_year %></td>
      <td> <%=link_to "Upvote", new_work_vote_path(book.id), class: "button upvote" %></td>
    </tr>
    <% end%>
  </tbody>
</table>

<h4>Movies</h4>

<table>
  <thead>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Upvote</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @movies.each do |movie|%>
      <td><%= movie.votes.length%></td>
      <td><%=link_to movie.title, work_path(movie[:id])%> </td>
      <td> <%= movie.creator %></td>
      <td> <%= movie.publication_year %></td>
      <td> <%=link_to "Upvote", new_work_vote_path(movie.id),class: "button upvote" %></td>
    </tr>
    <% end%>
  </tbody>
</table>
</section>
<%=link_to "View top media", root_path, class: "button"%>
<%=link_to "Add a new work", new_work_path, class: "button"%>

</section>
