<h3 class="page-header">List of works</h3>

<section class="media-table">
  <h4>Albums</h4>
  <table>
    <thead>
      <tr>
        <th width=80>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th width=100>Published</th>
        <th width=100>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @works.each do |work| %>
      <% if work.work_category == "album"%>
      <tr>
        <td> Num </td>
        <td> <%= link_to work.work_title, work_path(work.id) %> </td>
        <td> <%= work.work_creator %> </td>
        <td> <%= work.work_publication_year %> </td>
        <td> <a class="button upvote" rel="nofollow" data-method="post" href="/works/351/upvote">Upvote</a> </td>
      </tr>
      <% end%>
      <% end%>
    </table>
  </section>

