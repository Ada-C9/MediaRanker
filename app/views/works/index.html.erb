<h1>List of Works</h1>
<main>
  <table>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Created by</th>
      <th>Published</th>
      <th>Upvotes</th>
    </tr>
    <h3>Albums</h3>
    <% Work.albums.each do |work| %>
    <tr>
      <td><%= pluralize(work.votes.count, "vote")%></td>
      <td><%= link_to(work.title, work_path(work)) %></td>
      <td><%= work.creator%></td>
      <td><%= work.publication_year%></td>
      <td><button><%= link_to("UpVote",work_votes_path(work), method: :post) %></button></td>
    </tr>
    <% end %>
  </table>

