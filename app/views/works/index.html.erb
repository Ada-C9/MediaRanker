
<main class="row works-index">
  <h3>List of Works</h3>
  <h4>Albums</h4>
  <section class = "media-table">
    <table>
      <thead>
        <tr>
          <th width="80">
            Votes
          </th>
          <th>
            Title
          </th>
          <th>
            Created By
          </th>
          <th width="100">
            Published
          </th>
          <th width="100">
            Upvote
          </th>
        </tr>
      </thead>
      <tbody>
        <% @works.each do |work| %>
        <% if work.category == "album" %>
        <tr>
          <td>
            <%= work.votes.count %>
          </td>
          <td>
            <%=link_to work.title, work_path(work.id)%>
          </td>
          <td>
            <%=work.creator%>
          </td>
          <td>
            <%=work.publication_year%>
          </td>
          <td>
            <%=link_to "Upvote", upvote_path(work.id), method: :post, class: "button upvote"  %>
          </td>
        </tr>
        <% end %>
      </tbody>
      <% end %>

    </table>
  </section>
