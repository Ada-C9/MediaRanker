<h2>List of works</h2>

<h3>Albums</h3>
<table>
  <tr>
    <th> Votes</th>
    <th> Title</th>
    <th> Created By </th>
    <th> Published </th>
    <th> Upvote </th>
  </tr>
  <tr>
<% @albums.each do |album| %>

  <td> <%= album.vote_count%> </td>
  <td>
    <%=link_to album.title, work_path(album[:id]) %>
  </td>
  <td><%=album.creator%></td>
  <td><%=album.publication_year%></td>
  <td> <%=link_to "Upvote", work_votes_path(album), method: :post, class: "button upvote" %> </td>

  </tr>

<%end%>
</table>

