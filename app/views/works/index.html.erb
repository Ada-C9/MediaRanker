
<h3>List of Works</h3>

<h4>Albums</h4>
<tbody>
  <tr>
    <th width="80">Votes</th>
    <th>Title</th>
  </tr>
<%Work.where(category:'album').each do |album|%>
  <tr>
    <td>
    <%=album.votes.count%>
   </td>

  <td>
    <%=album.title%>
  </td>

</tr>
<%end%>
</tbody>

