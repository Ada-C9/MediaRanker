<h3>List of Works</h3>
<section class="media-table">
  <h4>Albums</h4>
  <table>
    <thead>
      <tr>
        <th width="80">
          Votes
        </th>
        <th>
          Title
        </th>
        <th>
          Created By
        </th>
        <th width="100">
          Published
        </th>
        <th width="100">
          Upvote
        </th>
      </tr>
    </thead>
    <tbody>
      <% @works_albums.each do |t| %>
      <tr>
        <td>
          <%= t.votes.count %>
        </td>
        <td>
          <%= link_to t.title, work_path(t.id)%>
        </td>
        <td>
          <%= t.creator %>
        </td>
        <td>
          <%= t.publication_year %>
        </td>
        <td>
          <%= link_to "Upvote", upvote_path(t.id), class: "button upvote", method: :post %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>

