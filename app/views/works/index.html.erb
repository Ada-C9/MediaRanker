<h3>List of Works</h3>
<h4>Albums</h4>
<table>
  <thead>
  <tr>
    <th>
      Votes
    </th>
    <th>
      Title
    </th>
    <th>
      Created By
    </th>
    <th>
      Published
    </th>
    <th>
      Upvote
    </th>
  </tr>
</thead>

  <% @works.each do |work| %>
  <% if work.category == "album" %>
    <tr>
      <td>
        <%= work.votes.count %>
      </td>
      <td>
        <%=link_to work.title, work_path(work.id)%>
      </td>
      <td>
        <%=work.creator%>
      </td>
      <td>
        <%=work.publication_year%>
      </td>
      <td>
        <%=link_to "Upvote", upvote_path(work.id), method: :post, class: "button upvote"  %>
      </td>
    </tr>
  <% end %>
  <% end %>

</table>
