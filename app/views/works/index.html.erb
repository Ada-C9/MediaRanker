<h2>List of Works</h2>

<h4>Albums</h4>

<table>
  <thead>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Upvote</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @albums.each do |album|%>
      <td>Put votes</td>
      <td><%=link_to album.title, work_path(album[:id])%> </td>
      <td> <%= album.creator %></td>
      <td> <%= album.publication_year %></td>
      <td> <%=link_to "Upvote", new_vote_path(album[:id]) %></td>
    </tr>
    <% end%>
  </tbody>
</table>

