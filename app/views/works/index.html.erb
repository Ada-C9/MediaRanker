<main class="row">
  <h3>List of works</h3>
  <section class="media-table">
    <h4>Movies</h4>
      <table>
        <thead>
          <tr>
          <th width=80>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width=100>Published</th>
          <th width=100>Upvote</th>
        </tr>
        </thead>
        <tbody>
          <% @movies.each do |movie| %>
          <tr>
            <td><%= movie.vote_count %></td>
            <td><%= link_to movie.title, work_path(movie.id) %></td>
            <td><%= movie.creator %></td>
            <td><%= movie.publication_year %></td>
            <td><%= link_to "Upvote", work_votes_path(movie), method: :post, class: "button upvote" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </section>
  <section class="media-table">
    <h4>Books</h4>
      <table>
        <thead>
          <tr>
          <th width=80>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width=100>Published</th>
          <th width=100>Upvote</th>
        </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= book.vote_count %></td>
            <td><%= link_to book.title, work_path(book.id) %></td>
            <td><%= book.creator %></td>
            <td><%= book.publication_year %></td>
            <td><a class="button upvote" rel="nofollow" data-method="post" href="#">Upvote</a></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </section>
  <section class="media-table">
    <h4>Albums</h4>
      <table>
        <thead>
          <tr>
          <th width=80>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width=100>Published</th>
          <th width=100>Upvote</th>
        </tr>
        </thead>
        <tbody>
          <% @albums.each do |album| %>
          <tr>
            <td><%= album.vote_count %></td>
            <td><%= link_to album.title, work_path(album.id) %></td>
            <td><%= album.creator %></td>
            <td><%= album.publication_year %></td>
            <td><a class="button upvote" rel="nofollow" data-method="post" href="#">Upvote</a></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </section>
</main>
