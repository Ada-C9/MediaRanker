<section>
  <div>
    <h3>
      <strong>
        List of Works
      </strong>
    </h3>
  </div>

  <h4>
    <strong>
      Albums
    </strong>
  </h4>

  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>

    <tbody>
      <% @works.show_albums.each do |work| %>
      <tr>
        <td>
          <%= work.votes.count %>
        </td>
        <td>
          <%= link_to(work.title, work_path(work)) %>
        </td>
        <td>
          <%= work.creator%>
        </td>
        <td>
          <%= work.publication_year %>
        </td>
        <td>
          <%= link_to("Upvote", upvote_path(work), class: "button")%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

