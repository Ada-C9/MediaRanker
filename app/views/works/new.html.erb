<h3>Add a new work</h3>

<section>
  <%= form_for @work do |f| %>

  <%= f.label :category %>
  <%= f.select :category, @categories.map { |cat| [cat.name, cat.id] } %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit %>

  <% end %>

</section>
