<% if @work.errors.messages.any? %>
<section class="row status failure">
  <h3>A problem occured: Could not create <%= @work.category.name %></h3>
  <ul>
  <% @work.errors.messages.each do |title, messages| %>
    <% messages.each do |m| %>
      <li><%= title %> : <%= m %></li>
    <% end %>
  <% end %>
  </ul>
</section>
<% end %>

<h3>Add a new work</h3>

<section>
  <%= form_for @work do |f| %>

  <%= f.label :category %>
  <%= f.select :category_id, Category.all.map { |cat| [cat.name, cat.id] } %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit %>

  <% end %>

</section>
