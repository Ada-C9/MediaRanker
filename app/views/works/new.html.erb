<h3>Add a New Work</h3>
<section>
  <%= form_for @work do |f| %>

    <%= f.label :category %>
    <%= f.select :category, Work.all.map{ |work| [work.category]}.uniq %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :creator %>
    <%= f.text_field :creator %>

    <%= f.label :publication_year %>
    <%= f.text_field :publication_year %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit %>
  <% end %>

</section>
