<article>
  <h3><%= @work.title %></h3>
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= @work.publication_year %></p>
  <p></p>
</article>

<section>
  <a class="button" href="/">Back to media ranks</a>
  <%= link_to "Edit", edit_work_path, class: "button" %>
  <%= link_to "Upvote", upvote_path(@work.id), class: "button", method: :post %>
  <%= link_to "Delete", work_path(@work.id), class: "alert button", method: :delete %>
</section>

<article>
  <h3><%= @work.votes.count %> Votes for this <%= @work.category %></h3>
</article>
