<article class="media-details">
  <h3 class="works"><%=@work.title%></h3>
  <p>Created by:
    <%=@work.creator%></p>
  <p>Published:
    <%=@work.publication_year%></p>
  <p>Published:
    <%=@work.description%></p>
  <section class="show-page-buttons">
    <%= link_to 'Back to media ranks', root_path, class: "button" %>
    <%= link_to 'Edit', edit_work_path[@work.id], class: "button" %>
    <%= link_to "Upvote", work_votes_path(@work.id), method: :post, :class=>"button" %>
    <a class="alert button" data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/works/<%=@work.id%>">Delete</a>
  </section>

  <h3><%= @work.votes.count %>
    Votes for this
    <%= @work.category %></h3>

  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @work.votes.each do |vote| %>
        <tr>

          <td><%= vote.user.username %></td>
          <td><%= vote.created_at %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
</article>
