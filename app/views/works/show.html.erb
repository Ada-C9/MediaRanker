
<main class = "row">
  <article class = "media-details columns large-6 small-12">
    <h3><%= @work.title %></h3>
    <p> Created by: <%= @work.creator %></p>
    <p> Published: <%= @work.publication_year %></p>
    <p> <%= @work.description %></p>
  </article>
  <section>
    <%= link_to("Back to media ranks", works_path, :class => "button") %>
    <%= link_to("Edit", edit_work_path(@work.id), :class => "button")%>
    <%= link_to("Upvote", work_votes_path(@work), method: :post, :class => "button" )%>
    <%= link_to("Delete", work_path(@work.id), method: :delete, data: {confirm: "Are you sure?"}, :class => "alert button")%>
  </section>
</article>
<article class="voting-users columns large-6 small-12">
  <h3><%= @work.votes.count %> Votes for this <%= @work.category %></h3>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @work.votes.each do |vote| %>
      <tr>
        <td><%= link_to(vote.user.user_name, user_path(vote.user.id)) %></td>
        <td><%= vote.created_at.strftime("%B %d, %Y") %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</article>

</main>
