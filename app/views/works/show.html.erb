<h4><%= @work.title %></h4>
<h6>Created by: <%= @work.creator%></h6>
<h6>Published: <%= @work.publication_year%></h6>
<h6><%= @work.description%></h6>

<ul>
  <li>
    <%= link_to "Back to media ranks", works_path %>
  </li>

  <li>
    <%= link_to "Edit", edit_work_path %>
  </li>
  <li>
    <%=link_to "Upvote", work_upvotes_path(@work.id), method: :post%>
  </li>
  <li>
    <%= link_to "Delete", work_path(@work.id),
    method: :delete %>
  </li>
</ul>

<h3><%= @work.upvotes_count %> Votes for this <%= @work.category.capitalize %></h3>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @work.upvotes.each do | upvote | %>
      <tr>
        <td><%= link_to upvote.user.name, user_path(upvote.user_id) %></td>
        <td><%= upvote.created_at.strftime("%b %d, %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
