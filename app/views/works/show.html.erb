<article class="media-details">
<h3><%= @work.title%> </h3>
<p>Created by: <%= @work.creator%></p>
<p>Published: <%= @work.publication_year%></p>
<p><%= @work.description%></p>

<section>
<%= link_to "Back to Media Ranks", root_path, class: "button" %>

<%= link_to "Edit", edit_work_path, class: "button" %>

<%=link_to "Upvote", work_votes_path(@work.id), method: :post, class: "button upvote" %>

<%= link_to "Delete", work_path(@work.id), method: :delete, class: " alert button" %>
</section>
</article>

<article class="voting-users">
  <h4><%= @work.vote_count%> Votes for this <%=@work.category%></h4>

  <table>
    <thead>
      <th>User</th>
      <th>Date</th>
    </thead>
    <tbody>
      <% @work.votes.each do |vote| %>
      <tr>
      <td><%= link_to vote.user.user_name, user_path(vote.user.id)%></td>
      <td><%= vote.created_at.to_date.to_formatted_s(:long_ordinal)%></td>
      </tr>
      <%end%>
    </tbody>
  </table>

</article>
