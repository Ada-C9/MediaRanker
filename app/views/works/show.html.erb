<h3><%= @work.title %></h3>
<p>Created by: <%= @work.creator %></p>
<p>Published: <%= @work.publication_year %></p>
<p><%= @work.description %></p>

<ul>
  <li><%= link_to "Back to media ranks", mains_path(@user) %></li>
  <li><%= link_to "Edit", edit_work_path(@work.id) %></li>
  <li><%= link_to "Upvote", work_votes_path(@work), method: :post %></li>
  <li><%= link_to "Delete", work_path(@work.id), :data => {:confirm => 'Are you sure?'}, method: :delete %></li>
</ul>

