<article>
  <h3><%= @work.title %></h3>
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= @work.publication_year %></p>
  <p></p>
</article>

<section>
  <a class="button" href="/">Back to media ranks</a>
  <%= link_to "Edit", edit_work_path, class: "button" %>
  <a class="button" href=#>Upvote</a>
  <a class="alert button" data-confirm data-method="Are you sure?" method="delete" href="/works/id">Delete</a>
</section>

<article>
  <h3># Votes for this <%= @work.category %></h3>
</article>
