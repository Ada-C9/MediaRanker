<article>

  <h3>
    <%= @work.title %>
  </h3>
  <p>
    Created by: <%= @work.creator %>
  </p>
  <p>
    Published: <%= @work.publication_year %>
  </p>
  <p>
    <%= @work.description %>
  </p>

  <section class="work-actions">
    <%= link_to 'Back to media ranks', root_path, class: "button" %>
    <%= link_to 'Edit', edit_work_path, class: "button" %>
    <%= link_to 'Upvote', upvote_path(@work), method: :post, class: "button" %>
    <%= link_to 'Delete', work_path(@work), method: :delete, data: { confirm: "Are you sure?" }, class: "button" %>
  </section><!-- action items for work -->

</article><!-- work details -->

<article>
  <h3>
    <%= @work.votes.count %>
    Votes for this
    <%= @work.category.capitalize %>
  </h3>

  <table>
    <thead>
      <tr>
        <th>
          User
        </th>
        <th>
          Date
        </th>
      </tr>
    </thead>

    <tbody>
      <% @work.votes.each do |vote| %>
      <tr>
        <td>
          <%= link_to vote.user.username, user_path(vote.user) %>
        </td>
        <td>
          <%= vote.format_vote_date %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</article><!-- work votes -->
