<main class="row">
<ul>
  <li><%= @work.title %></li>
  <li>Created by: <%= @work.creator %></li>
  <li>Published: <%= @work.publication_year %></li>
  <li><%= @work.description %></li>
</ul>

<%= link_to("Back to media ranks", work_path(@work) ,class: "button") %>
<%= link_to("Edit", edit_work_path(@work), class: "button") %>
<%= link_to("Upvote", work_path(@work), class: "button") %>
<%= link_to("Delete", work_path(@work.id), class: "button", method: :delete, data: {confirm: "Are you sure you want to delete Work #{@work.title}"}) %>
</main>
