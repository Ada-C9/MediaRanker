<br><br><br><br>
<article>
  <h3>
    <%= @work.title %>
  </h3>

  <p>
    Created by:
    <%= @work.creator %>
  </p>

  <p>
    Released:
    <%= @work.publication_year %>
  </p>

  <p>
    Details:
    <%= @work.description %>
  </p>
</article>

<section> <!-- TO DO: Add ROOT path and upvote path-->
  <%= link_to("Back to media ranks", root_path, class: "button") %>
  <%= link_to("Edit", edit_work_path, class: "button") %>
  <%= link_to("Upvote", upvote_work_path(@work), method: :post, class: "button")%>
  <%= link_to("Delete", work_path(@work), class: "button", method: :delete, data: { confirm: "Are you sure you want to delete #{ @work.title }?" }) %>
</section>

<article>
  <h3><%= pluralize(@work.votes.count, "vote") %> for this <%= @work.category %></h3>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
        <% @work.upvoted_users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user_creation_date(user) %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</article>
