<main>
  <% if session[:user_id] %>
    <% @vote = @work.votes.find_by(user_id: session[:user_id]) %>
    <%= render partial: "layouts/error-messages", locals: { model: @vote } %>
  <% end %>
  
  <article>
    <h2><%= @work.title %></h2>
    <h3>Created by: <%= @work.creator %></h3>
    <h3>Published: <%= @work.publication_year %></h3>
    <h3>Description: <%= @work.description %></h3>
  </article>

  <section>
    <%= link_to "Back to media ranks", root_path, class: "button" %>
    <%= link_to "Edit", edit_work_path(@work), class: "button" %>
    <%= link_to "Upvote", work_upvote_path(@work), method: :post, class: "button" %><li>
    <%= link_to "Delete", work_path(@work), method: :delete, data: { confirm: "Are you sure you want to delete #{@work.title}?" }, class: "button" %>
  </section>

  <section>
    <h2><%= @work.votes.count %> votes for this <%= @work.category.capitalize %></h2>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% @work.votes.each do |vote| %>
        <tr>
          <% user = User.find_by(id: vote.user_id) %>
          <td> <%= link_to "#{user.username}", user_path(user) %></td>
          <td> <%= display_date(vote.created_at) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</main>
