
<h3><%=@work.title%></h3>



  <p>Created by: <%=@work.created_by%></p>
  <p>Published: <%= @work.published%></p>
  <p><%= @work.description%></p>


<section>
  <%= link_to "Back to media ranks", root_path, class: "button"%>
  <%= link_to "Edit", edit_work_path(@work), class: "button"%>
  <%= link_to "Upvote", upvote_path(@work), method: :post, class: "button"%>
  <%= link_to "Delete", work_path(@work), method: :delete, data: {confirm: "Are you sure you want to delete this #{@work.category}?"}, class: "alert button" %>
</section>



<h3><%= @work.total_votes%> votes for this <%=@work.category%></h3>


<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>

    <% @work.votes.each do |vote| %>
    <% user = User.find(vote.user_id)%>
    <tr>
      <td><%= user.username%></td>
      <td><%= vote.created_at.strftime("%b %d, %Y")%></td>

    </tr>
    <%end%>

  </tbody>
