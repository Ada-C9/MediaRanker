<h3>
  <%= @work.title %>
</h3>

<p>
  Created by:
  <%= @work.creator %>
</p>

<p>
  Released:
  <%= @work.publication_year %>
</p>

<p>
  Details:
  <%= @work.description %>
</p>

<section> <!-- TO DO: Add ROOT path and upvote path-->
  <%= link_to("Back to media ranks", root_path, class: "button") %>
  <%= link_to("Edit", edit_work_path, class: "button") %>
  <%= link_to("Upvote", work_path(@work), class: "button") %>
  <%= link_to("Delete", work_path(@work), class: "button", method: :delete, data: { confirm: "Are you sure you want to delete #{ @work.title }?" }) %>

</section>
