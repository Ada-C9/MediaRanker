<section>
  <h3><strong><%= @work.title %></strong></h3>

  <h5>Created by: <%= @work.creator %></h5>

  <h5>Published: <%= @work.publication_year %></h5>

  <h5><%= @work.description %></h5>


  <button class="button-selects">
    <%= link_to("Back to media ranks") %>
  </button>
  <button class="button-selects">
    <%= link_to("Edit", edit_work_path(@work)) %>
  </button>
  <button class="button-selects">
    <%= link_to("Upvote") %>
  </button>
  <button class="delete-button">
    <%= link_to("Delete", work_path(@work.id), method: :delete, data: { confirm: "Are you sure?" }) %>
  </button>


  <table>
    <tr>
      <th>
        <strong>User</strong>
      </th>
      <th>
        <strong>Date</strong>
      </th>
    </tr>
    <tr>
      <td>
        <%=  %>
      </td>
      <td>
        <%=  %>
      </td>
    </tr>
  </table>
</section>
