<article class="media-details">
<h3><%= @work.title%> </h3>
<p>Created by: <%= @work.creator%></p>
<p>Published: <%= @work.publication_year%></p>
<p><%= @work.description%></p>

<section>
<%= link_to "Back to Media Ranks", root_path, class: "button" %>

<%= link_to "Edit", edit_work_path, class: "button" %>

<%= link_to "Upvote", new_vote_path, class: "button" %>

<%= link_to "Delete", work_path(@work.id), method: :delete, class: "button" %>
</section>
</article>

<article class="voting-users">
  <h3># Votes for this <%=@work.category%></h3>
  <table>
    <thead>
      <th>User</th>
      <th>Date</th>
    </thead>
    <tbody>
      <tr>
        <%= link_to "user", user_path %>
      </tr>
      vote created on date
      <tr>

      </tr>
    </tbody>
  </table>

</article>
