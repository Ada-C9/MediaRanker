<h3><%= @work.title %></h3>

<p><%= "Created by: #{@work.creator}" %></p>
<p><%= "Published: #{@work.publication_year}" %></p>
<p><%= @work.description %></p>


<section>
<%= link_to "Back to media ranks", works_path, class: "button" %>

<%= link_to "Edit", edit_work_path(@work), class: "button" %>

<%= link_to "Upvote", edit_work_path(@work), class: "button" %>

<%= link_to "Delete", work_path(@work), class: "alert button", method: :delete, data: {confirm: "Are you sure you want to delete #{@work.title}?"} %>
</section>
