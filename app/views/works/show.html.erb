<h3><%= @work.title %></h3>

<p><%= "Created by: #{@work.creator}" %></p>
<p><%= "Published: #{@work.publication_year}" %></p>
<p><%= @work.description %></p>


<section>
<%= link_to "Back to media ranks", root_path, class: "button" %>

<%= link_to "Edit", edit_work_path(@work), class: "button" %>

<%= link_to "Upvote", work_upvote_path(@work), method: :post, class: "button" %>

<%= link_to "Delete", work_path(@work), class: "alert button", method: :delete, data: {confirm: "Are you sure you want to delete #{@work.title}?"} %>
</section>

<h3><%= "#{@work.votes.length} Votes for this #{@work.category}" %></h3>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>

    <% @work.votes.each do |v| %>

    <tr>
      <td><%= link_to v.user.username, user_path(v.user.id) %></td>
      <td class="created"><%= v.created_at.strftime("%b %d, %Y") %></td>
    </tr>

    <% end %>

  </tbody>
</table>
