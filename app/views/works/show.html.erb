<article class="media-details">
  <h3><strong><%= @work.title %></strong></h3>

  <p>Created by: <%= @work.creator %></p>

  <p>Published: <%= @work.publication_year %></p>

  <p><%= @work.description %></p>

  <section>
    <%= link_to("Back to media ranks", root_path, class: "button") %>
    <%= link_to("Edit", edit_work_path(@work), class: "button") %>
    <%= link_to("Upvote", upvote_path(@work), class: "button") %>
    <%= link_to("Delete", work_path(@work.id), class: "button alert", method: :delete, data: { confirm: "Are you sure?" }) %>
  </section>
</article>

<article>
  <h3><%= @work.votes.count %> Votes for this <%= @work.category %></h3>
  <table>
    <thead>
      <tr>
        <th>
          <strong>User</strong>
        </th>
        <th>
          <strong>Date</strong>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @work.votes.each do |vote| %>
      <tr>
        <td>
          <%= link_to(work.vote.creater, user_path(@user))  %>
        </td>
        <td>
          <%= work.vote.created_at %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</article>
