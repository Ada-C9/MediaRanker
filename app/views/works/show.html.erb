<main class="row">
  <article class="media-details">
  <h3><%= @work.title %></h3>
  <p><%= @work.creator %></p>
  <p><%= @work.publication_year %></p>
  <p><%= @work.description %></p>
  <section>
    <%= link_to("Back to media ranks", root_path, :class => "button") %>
    <%= link_to("Edit", edit_work_path(@work.id), :class => "button") %>

    <%# TODO fix upvote routes %>
    <%= link_to("Upvote", upvote_path(@work.id), :class => "button") %>
    <%= link_to("Delete", work_path(@work.id), :class => "button", method: :delete, data: { confirm: "Are you sure you want to delete this work?" }) %>
  </section>
</article>

<%# TODO Fill this in with proper links to real users %>
<article class="voting-users">
  <h3> <%= @work.votes.count %> Votes for this <%= @work.category %></h3>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
    </thead>
    <% @work.votes.each do |vote| %>
      <tr>
        <td>
          <%= link_to "#{vote.user.name}", user_path(vote.user) %>
        </td>
        <td>
          <%= vote.created_at.strftime("%B %d, %Y") %>
        </td>
      </tr>
    <% end %>
  </table>
</article>
</main>
