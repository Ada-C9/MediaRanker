<h2>Show a work</h2>

<h2>Category: <%= @work.category %></h2>
<h3>Title: <%= @work.title %></h3>
<h3>Created by:  <%= @work.creator %></h3>
<h3>Published: <%= @work.publication_year %></h3>
<h3>Description: <%= @work.description %></h3>


<div>
  <%= button_to "Edit", edit_work_path(@work.id), method: :get %>
  <%= button_to "Delete", work_path(@work.id), method: :delete %>
</div>
