<main class="row">
<article>
  <h3><%= @work.title %></h3>
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= @work.publication_year %></p>
  <p><%= @work.description %></p>

<section>
  <%= link_to("Back to media ranks", work_path(@work) ,class: "button") %>
  <%= link_to("Edit", edit_work_path(@work), class: "button") %>
  <%= link_to("Upvote", upvote_path(@work), class: "button") %>
  <%= link_to("Delete", work_path(@work.id), class: "button", method: :delete, data: {confirm: "Are you sure you want to delete Work #{@work.title}"}) %>
</section>
</article>
</main>
<main class="row">
  <section>
    <h3><strong><%= @work.votes.count %> votes for this <%= @work.category%></strong></h3>

    <table>
      <tr>
        <td width="100">
          <strong>User</strong>
        </td>
        <td width="100">
          <strong>Date</strong>
        </td>

      </tr>


      <% @work.votes.each do |vote| %>
      <tr>
        <td>
          <%= link_to "#{vote.user.name}", user_path(vote.user) %>
        </td>
        <td>
          <%= vote.created_at.strftime("%B %d, %Y") %>
        </td>
      </tr>
      <% end %>
    </table>
  </section>

</main>
