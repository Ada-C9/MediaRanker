<main>
  <article>
    <h3><%= @work.title %></h3>
    <p> Created by: <%= @work.creator %></p>
    <p> Published: <%= @work.publication_year %></p>
    <p> <%= @work.description %></p>
  </article>
  <section>
        <%= link_to("Back to media ranks", works_path, :class => "button") %>
        <%= link_to("Edit", edit_work_path(@work.id), :class => "button")%>
        <%= link_to("Upvote", votes_path(:work => @work.id), method: :post, :class => "button" )%>
        <%= link_to("Delete", work_path(@work.id), method: :delete, data: {confirm: "Are you sure?"}, :class => "alert button")%>
      </section>
    </article>
