<h3><%= @work.title %></h3>

<p>Created by: <%= @work.creator %></p>

<% if @work.publication_year != nil %>
  <p>Published: <%= "#{@work.publication_year.year}" %>
<% else %>
    <%= "#{@work.publication_year}" %>
<% end %>

<p><%= @work.description %></p>

<nav>
    <%= link_to("Back to media ranks", root_path, class: "button") %>
    <%= link_to("Edit", edit_work_path(@work), class: "button") %>
    <%= link_to("Upvote", upvote_work_path(@work, @user), class: "button", method: :post) %>
    <%= link_to("Delete", work_path(@work), class: "alert button", method: :delete, data: { confirm: "Are you sure?"}) %>
</nav>

<%= render partial: "vote", locals: { model: @user}  %>
