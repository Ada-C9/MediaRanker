<main>
  <article>
    <h2><%= @work.title %></h2>
    <h3>Created by: <%= @work.creator %></h3>
    <h3>Published: <%= @work.publication_year %></h3>
    <h3>Description: <%= @work.description %></h3>
  </article>

  <section>
    <%= link_to "Back to media ranks", root_path %>
    <%= link_to "Edit", edit_work_path(@work) %>
    <%= link_to "Delete", work_path(@work), method: :delete, data: { confirm: "Are you sure you want to delete #{ @work.title}?" } %>
  </section>
</main>
