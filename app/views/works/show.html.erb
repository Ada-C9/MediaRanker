<article class="media-details columns large-6 small-12">
  <h3><%= @work.title %></h3>
  <p>Created by: <%=@work.created_by%></p>
  <p>Published: <%=@work.year%></p>
  <p><%=@work.description%></p>

  <section>
    <%= link_to "Back to media ranks", top_works_path, class:"button" %>
    <%= link_to "Edit", edit_work_path(@work.id), class:"button" %>
    <%= link_to "Upvote", vote_path(@work.id), method: :post, class:"button" %>
    <%= link_to "Delete", work_path(@work.id), method: :delete, data: {confirm: "Are you sure?"}, class:"button" %>
  </section>
</article>

<article class="voting-users columns large-6 small-12">
  <h3><%=@work.votes.count%> Votes for this <%=@work.category.capitalize%></h3>
  <table>
    <thead>
      <tr>
        <th>
          User
        </th>
        <th>
          Date
        </th>
      </tr>
    </thead>
    <tbody>
      <%@work.votes.each do |vote| %>
      <tr>
        <td>
          <%= link_to vote.user.name, user_path(vote.user.id)%>
        </td>
        <td>
          <%=vote.created_at.to_datetime.to_formatted_s(:long_ordinal)%>
        </td>
      </tr>
      <%end%>
    </tbody>
  </table>
</article>
