<article class="media-details">
<h3><%= @work.title%> </h3>
<p>Created by: <%= @work.creator%></p>
<p>Published: <%= @work.publication_year%></p>
<p><%= @work.description%></p>

<section>
<%= link_to "Back to Media Ranks", root_path, class: "button" %>

<%= link_to "Edit", edit_work_path, class: "button" %>

<%=link_to "Upvote", work_votes_path(@work), method: :post, class: "button upvote" %>

<%= link_to "Delete", work_path(@work.id), method: :delete, class: " alert button" %>
</section>
</article>

<article class="voting-users">
  <h3><%= @work.vote_count%> Votes for this <%=@work.category%></h3>
  <table>
    <thead>
      <th>User</th>
      <th>Date</th>
    </thead>
    <tbody>
      <tr>
        <%= link_to "user", user_path %>
      </tr>

      <tr>
        vote created on : (date placeholder)
      </tr>
    </tbody>
  </table>

</article>
