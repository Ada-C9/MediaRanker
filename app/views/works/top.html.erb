<section class="spotlight">
  <h3>THIS IS THE SPOTLIGHT</h3>
</section>

<section class="top-ten-container">
  <% @categories.each do |category| %>
  <section class="top-ten">
    <h3>Top <%= category.name.capitalize %>s</h3>
    <ul>
    <% @works.where(category: category).each do |work| %>
    <li>
      <h4><%= work.title %><small> by <%= work.creator %></small></h4>
      <p>5 votes</p>
    </li>
    <% end%>
    </ul>
  </section>
  <% end %>
</section>
