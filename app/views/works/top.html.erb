<h2>Media Spotlight: </h2>
<section class='top-media'>
  <section>
    <h3>Top Movies</h3>
    <% @works.where(category: 'movie').top_votes.take(10).each do |work| %>
    
    <ul class="no-bullet">
      <li>
        <strong> <%= work.title %> </strong> <%= work.created_by%>
      </li>
      <li>
        <%= work.votes.count %> votes
      </li>
    </ul>
    <% end %>
  </section>

  <section>
    <h3>Top Books</h3>
    <% @works.each do |work| %>
    <% work.category == 'book'%>
    <ul class="no-bullet">
      <li>
        <strong> <%= work.title %> </strong> <%= work.created_by%>
      </li>
      <li>
        <%= work.votes.count %> votes
      </li>
    </ul>
    <% end %>
  </section>

  <section>
    <h3>Top Albums</h3>
    <% @works.each do |work| %>
    <% work.category == 'album'%>
    <ul class="no-bullet">
      <li>
        <strong> <%= work.title %> </strong> <%= work.created_by%>
      </li>
      <li>
        <%= work.votes.count %> votes
      </li>
    </ul>
    <% end %>
  </section>
</section>
