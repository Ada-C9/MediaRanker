<section class='row spotlight'>
  <div>
    <h3>
      <span class="media-spotlight-header">Media Spotlight</span>
      <%= link_to "#{@top.title}", work_path(@top) %>
      by <%="#{@top.creator}" %>
    </h3>
  </div>
</section>

<%# make these a partial %>
<h3>Top Albums</h3>
<ul>
  <% @top_albums.each do |album| %>
    <li>
      <%= link_to "#{album.title}", work_path(album) %>
      <%= album.creator %>
      <%= album.publication_year %>
    </li>
  <% end %>
</ul>

