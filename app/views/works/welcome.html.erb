        <h4><%= link_to work.work_title, work_path(work.id) %> <small>by <%= work.work_creator %> </small></h4>
        <p>1 votes</p>
      </li>
      <% end%>
      <% end%>
    </ul>
  </section>

  <section class="top-ten">
    <h3>Top Albums</h3>
    <ul>
      <% @works.each do |work| %>
      <% if work.work_category == "album"%>
      <li>
        <h4><%= link_to work.work_title, work_path(work.id) %> <small>by <%= work.work_creator %> </small></h4>
        <p>1 votes</p>
      </li>
      <% end%>
      <% end%>
    </ul>
  </section>

</section>
